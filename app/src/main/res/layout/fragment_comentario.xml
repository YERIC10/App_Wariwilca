<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".ui.comentario.Comentario">

   <FrameLayout
       android:layout_width="320dp"
       android:layout_height="680dp"
       android:background="#0D000000"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.495"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/textView1"
          android:layout_width="256dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center|top"
          android:layout_marginTop="50dp"
          android:gravity="center"
          android:text="AYUDANOS A MEJORAR"
          android:textColor="@color/black"
          android:textSize="22dp"
          android:textStyle="bold">

      </TextView>

      <EditText
          android:id="@+id/txt_Nombre"
          android:layout_width="258dp"
          android:layout_height="50dp"
          android:layout_gravity="center|top"
          android:layout_marginTop="150dp"
          android:gravity="center|left"
          android:hint="Nombre"
          android:textColorHint="#C3BFBF"
          android:textSize="20dp">

      </EditText>

      <EditText
          android:id="@+id/txt_Comentario"
          android:layout_width="260dp"
          android:layout_height="236dp"
          android:layout_gravity="center"
          android:gravity="end|left"
          android:hint="Ingrese su Comentario"
          android:scrollbars="vertical"
          android:textColorHint="#C3BFBF"
          android:textSize="20dp">

      </EditText>

      <Button
          android:id="@+id/btn_guardar_comentario"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center|bottom"
          android:layout_marginBottom="50dp"
          android:background="@drawable/style_btn"
          android:text="GUARDAR"
          android:textColor="#616161"
          app:backgroundTint="@null">

      </Button>
   </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>